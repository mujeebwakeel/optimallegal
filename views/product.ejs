<%- include('partials/header'); -%>
    
    <main id="main">

    
        <!-- ======= Form Section ======= -->
        <section class="contact section-bg">
            
                <div class="section-title" data-aos="fade-up">
                    <h2>New Product</h2>
                </div>
    
                <div class="row">
    
                    <div class="col-lg-12 mt-12 mt-lg-0 d-flex align-items-stretch" data-aos="fade-left">
                        <form action="/admin_products" method="POST" role="form" class="php-email-form" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="productImage">Product Image</label>
                                    <input type="file" class="form-control"  name="image" accept="image/*" id="productImage" required/>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="productTitle">Product Title</label>
                                    <input type="text" class="form-control" name="product[title]" id="productTitle"/>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="content">Content</label>
                                    <textarea name="product[content]" id="content" cols="30" rows="10" class="form-control" required placeholder="Enter Product Description"></textarea>
                                    <div class="validate"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                            </div>
                            <div class="text-center"><button  type="submit">Add Product</button></div>
                        </form>
                    </div>
    
                </div>
    
        </section><!-- End form Section -->
    
    </main><!-- End #main -->
    

    <%- include('partials/footer'); -%>
