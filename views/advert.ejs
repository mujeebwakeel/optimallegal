<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top ">
    <div class="container d-flex align-items-center">

      <h1 class="logo mr-auto"><a href="/">Optimal</a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo mr-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li class="active"><a href="/">Home</a></li>
          
            <% if(currentUser) { %>
              <li><a href="/logout">Logout</a></li>
            <% } else { %>
              <li><a href="/user_login">Sign In</a></li>
            <% } %>
            <li><a href="/user_signup">Sign Up</a></li>

        </ul>
      </nav><!-- .nav-menu -->

      <a href="https://wa.me/2347031395119" class="get-started-btn scrollto"> ENGAGE A LAWYER</a>

    </div>

  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section id="hero">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">

      <div class="carousel-inner" role="listbox">

        <!-- Slide 1 -->
       <% if(Product.length) { %>
            <div class="carousel-item active" style="background-image: url('<%= Product[Product.length - 1].image %>');">
              <div class="carousel-container">
                <div class="carousel-content animate__animated animate__fadeInUp">
                  <h2><%= Product[Product.length - 1].description %></span></h2>
                  <p><%= Product[Product.length - 1].review %></p>
                  <div>category: <span><%= Product[Product.length - 1].category %></span></div>
                  <div>state: <span><%= Product[Product.length - 1].state %></span></div>
                  <div>price: <span>#<%= Product[Product.length - 1].price %></span></div>
                </div>
              </div>
            </div>

            <% for(var i= Product.length-2; i >= 0; i--) { %>
              <div class="carousel-item" style="background-image: url('<%= Product[i].image %>');">
                <div class="carousel-container">
                  <div class="carousel-content animate__animated animate__fadeInUp">
                    <h2><%= Product[i].description %></span></h2>
                    <p><%= Product[i].review %></p>
                    <div>category: <span><%= Product[i].category %></span></div>
                    <div>state: <span><%= Product[i].state %></span></div>
                    <div>price: <span>#<%= Product[i].price %></span></div>
                  </div>
                </div>
              </div>
      
          <%  } %>
        <% } %>
    
        
      </div>

      <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon icofont-simple-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon icofont-simple-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>

      <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

    </div>
  </section><!-- End Hero -->

