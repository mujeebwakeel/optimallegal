<%- include('partials/header'); -%>

  <!-- ======= Hero Section ======= -->
  <section id="hero">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">

      <div class="carousel-inner" role="listbox">

        <% if(products[0]) { %>
            <!-- Slide 1 -->
        <div class="carousel-item active" style="background-image: url('<%= products[products.length-1].image %>');">
            <div class="carousel-container">
              <div class="carousel-content animate__animated animate__fadeInUp">
                <h2><%= products[products.length-1].title%></span></h2>
                  <p><%= products[products.length-1].content%></p>              
              </div>
            </div>
          </div>
        <% } %>

        <% for(var i=2; i <= products.length; i++) { %>
            <div class="carousel-item" style="background-image: url('<%= products[products.length-1].image %>');">
                <div class="carousel-container">
                  <div class="carousel-content animate__animated animate__fadeInUp">
                    <h2><%= products[products.length-i].title%></h2>
                    <p><%= products[products.length-i].content%></p>              
                  </div>
                </div>
              </div>
            
        <% } %>

        

      </div>

      <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon icofont-simple-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon icofont-simple-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>

      <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

    </div>
  </section><!-- End Hero -->

<%- include('partials/footer'); -%>
