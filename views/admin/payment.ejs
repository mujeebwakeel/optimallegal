    <script> var getColor = function(text) {
     if (text === "Successful") return 'green';
     if (text === "Pending") return 'yellow';
        if (text === "Failed") return 'red';
        return "";
    };

    $('td').each(function(i, td) {
    var color = getColor($(td).html());
    $(td).css({
    "color": color
    });
    });
