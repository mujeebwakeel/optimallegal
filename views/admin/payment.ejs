    <main class="app-content">
      <div class="app-title">
        <div>
          <h1><span id="ft"><i class="fa fa-th-list"></i></span>Payment Table</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item"><span id="ft"><i class="fa fa-money" aria-hidden="true"></span></i></li>
          <li class="breadcrumb-item active"><a href="#">Payments</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <div class="table-responsive">
                <table class="table table-hover table-bordered" id="sampleTable">
                  <thead>
                    <tr>
                      <th>User Name</th>
                      <th>Transaction ID</th>
                      <th>Payment Type</th>
                      <th>Date</th>
                      <th>Amount (<span>&#8358;</span>)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% payments.forEach(function(payment) { %>
                      <tr>
                        <td><%= payment.username%></td>
                        <td><%= payment.ref%></td>
                        <td><%= payment.type%></td>
                        <td><%= payment.date%></td>
                        <td><%= payment.amount%></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
