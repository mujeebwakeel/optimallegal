<%- include('partials/header'); -%>

    <main id="main">

    
        <!-- ======= Form Section ======= -->
        <section class="contact section-bg">
            
                <div class="section-title" data-aos="fade-up">
                    <h2>Sign up</h2>
                </div>
    
                <div class="row">
    
                    <div class="col-lg-12 mt-12 mt-lg-0 d-flex align-items-stretch" data-aos="fade-left">
                        <form action="/user_signup" method="POST" role="form" class="php-email-form">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="username">Your Username</label>
                                    <input type="text" name="username" class="form-control" id="name" required />
                                    <div class="validate"></div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="email">Your Email</label>
                                    <input type="email" class="form-control" name="email" id="email" required />
                                    <div class="validate"></div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="password">Your Password</label>
                                    <input type="password" class="form-control" name="password" id="password" required/>
                                    <div class="validate"></div>
                                </div>
                            </div>
                           
                            <div class="mb-3">
                            </div>
                            <div class="text-center"><button  type="submit">Sign Up</button> <p style="float: right; color: red"><a href="/user_login">login</a></p></div>
                        </form>
                    </div>
    
                </div>
    
        </section><!-- End form Section -->
    
    </main><!-- End #main -->
    

    <%- include('partials/footer'); -%>
